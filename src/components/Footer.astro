---
import { Image } from "astro:assets";

interface PartnerAddress {
  street: string;
  city: string;
  state: string;
  zip: string;
}

interface Props {
  image?: string;
  partnerName: string;
  address: PartnerAddress;
}

const { address, image = "/placeholder-1.jpg", partnerName } = Astro.props;
const alt = `Logo for ${partnerName}`;
---

<footer>
  <Image src={image} alt={alt} width={300} height={150} />
  <address>
    <strong>{partnerName}</strong>
    <br />
    {address.street}
    <br />
    {address.city}, {address.state}
    {address.zip}
  </address>
  <style>
    footer {
      padding: 2em 1em 6em 1em;
      background: linear-gradient(var(--gray-gradient)) no-repeat;
      color: rgb(var(--gray));
    }
  </style>
</footer>
